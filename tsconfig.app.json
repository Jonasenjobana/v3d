{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "typeRoots": [
      "./src/types",
      "./node_modules/@types",
      "./node_modules/vuetify/types",
    ],
    "types": [
      "vuetify"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
